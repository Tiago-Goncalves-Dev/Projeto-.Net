@page
@model Projeto_Net.Pages_Reclamacoes.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-10">

            <h1 class="text-center mb-5 fw-bold text-dark">CRIAR AS RECLAMAÇÕES</h1>

            <div class=" shadow-lg border-0 rounded-4">
                <div class="bg-white card-body p-5">

                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Reclamacao.Assunto" class="form-label fw-medium">
                                    <span class="text-danger">*</span> Assunto
                                </label>
                                <input asp-for="Reclamacao.Assunto" class="form-control form-control-lg" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-medium">Nome do Consumidor</label>
                                <input class="form-control form-control-lg bg-light"
                                       value="@Model.Reclamacao.NomeConsumidor" readonly />
                                <input type="hidden" asp-for="Reclamacao.NomeConsumidor" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Reclamacao.TextoReclamacao" class="form-label fw-medium">
                                <span class="text-danger">*</span> Texto da Reclamação
                            </label>
                            <textarea asp-for="Reclamacao.TextoReclamacao" class="form-control" rows="6"></textarea>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Reclamacao.DataEntrada" class="form-label fw-medium"></label>
                                <input asp-for="Reclamacao.DataEntrada" class="form-control form-control-lg" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-medium">Anexo (opcional)</label>
                                <input type="file" name="ficheiroUpload" class="form-control form-control-lg" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Reclamacao.NomeOriginalFicheiro" class="form-label fw-medium"></label>
                            <input asp-for="Reclamacao.NomeOriginalFicheiro" class="form-control form-control-lg" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary btn-lg">Voltar</a>
                            <button type="submit" class="btn btn-dark btn-lg">Criar</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>